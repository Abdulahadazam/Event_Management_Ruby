<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <!-- Header -->
  <header class="border-b sticky top-0 bg-white/95 backdrop-blur-sm z-50 shadow-sm">
    <div class="w-full px-6 sm:px-8 lg:px-16">
      <div class="flex items-center justify-between h-16">
        <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-80 transition-opacity" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M8 2v4"></path>
              <path d="M16 2v4"></path>
              <rect width="18" height="18" x="3" y="4" rx="2"></rect>
              <path d="M3 10h18"></path>
            </svg>
          </div>
          <h1 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">EventHub</h1>
        <% end %>

        <nav class="hidden md:flex items-center gap-1">
          <%= link_to "Browse Events", root_path, class: "px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium" %>
          <%= link_to "My Tickets", "#", class: "px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium" %>
        </nav>

        <div class="flex items-center gap-3">
          <% if user_signed_in? %>
            <div class="flex items-center gap-2">
              <%= link_to "Profile", edit_user_registration_path, class: "hidden sm:inline-flex px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium text-sm" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-4 py-2 rounded-lg bg-gray-900 text-white hover:bg-gray-800 transition-colors font-medium text-sm" %>
            </div>
          <% else %>
            <div class="flex items-center gap-2">
              <%= link_to "Log In", new_user_session_path, class: "px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium text-sm" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "px-4 py-2 rounded-lg bg-gradient-to-r from-indigo-600 to-purple-600 text-white hover:from-indigo-700 hover:to-purple-700 transition-all font-medium text-sm shadow-lg shadow-indigo-500/30" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="py-8">
    <div class="w-full px-6 sm:px-8 lg:px-16 max-w-7xl mx-auto">
      <!-- Back Button -->
      <div class="mb-6">
        <%= link_to root_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors group" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:-translate-x-1 transition-transform">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          <span class="font-medium">Back to Events</span>
        <% end %>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Event Details -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Event Image & Header -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <!-- Hero Image -->
            <div class="relative h-[400px] bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500">
              <% if @event.image_url.present? %>
                <%= image_tag @event.image_url, alt: @event.title, class: "w-full h-full object-cover" %>
              <% elsif @event.banner.attached? %>
                <%= image_tag @event.banner_url, alt: @event.title, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="opacity-50">
                    <path d="M8 2v4"></path>
                    <path d="M16 2v4"></path>
                    <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                    <path d="M3 10h18"></path>
                  </svg>
                </div>
              <% end %>
              
              <!-- Category Badge -->
              <div class="absolute top-4 left-4">
                <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/95 backdrop-blur-sm shadow-lg">
                  <span class="w-2 h-2 rounded-full bg-indigo-600"></span>
                  <span class="text-sm font-semibold text-gray-900"><%= @event.category %></span>
                </span>
              </div>

              <!-- Attendees Badge -->
              <div class="absolute top-4 right-4">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/95 backdrop-blur-sm shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-600">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                  <span class="text-sm font-semibold text-gray-900"><%= @event.registrations_count %> attending</span>
                </div>
              </div>
            </div>

            <!-- Event Info -->
            <div class="p-8">
              <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @event.title %></h1>
              <p class="text-lg text-gray-600 leading-relaxed"><%= @event.description %></p>
            </div>
          </div>

          <!-- Event Details Card -->
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Event Details</h2>
            
            <div class="space-y-6">
              <!-- Date & Time -->
              <div class="flex items-start gap-4 p-4 rounded-xl bg-gradient-to-r from-indigo-50 to-purple-50 border border-indigo-100">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 flex items-center justify-center flex-shrink-0 shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M8 2v4"></path>
                    <path d="M16 2v4"></path>
                    <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                    <path d="M3 10h18"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1">Date & Time</h3>
                  <% if @event.date.present? %>
                    <p class="text-gray-700 font-medium"><%= @event.date.strftime("%A, %B %d, %Y") %></p>
                    <p class="text-gray-600"><%= @event.date.strftime("%I:%M %p") %></p>
                  <% else %>
                    <p class="text-gray-500">Date to be announced</p>
                  <% end %>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-4 p-4 rounded-xl bg-gradient-to-r from-indigo-50 to-purple-50 border border-indigo-100">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 flex items-center justify-center flex-shrink-0 shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1">Location</h3>
                  <p class="text-gray-700"><%= @event.location %></p>
                </div>
              </div>

              <!-- Price -->
              <div class="flex items-start gap-4 p-4 rounded-xl bg-gradient-to-r from-emerald-50 to-teal-50 border border-emerald-100">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-600 to-teal-600 flex items-center justify-center flex-shrink-0 shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" x2="12" y1="2" y2="22"></line>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 mb-1">Ticket Price</h3>
                  <p class="text-2xl font-bold text-gray-900">$<%= @event.price %></p>
                  <p class="text-sm text-gray-600">per person</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Additional Info -->
          <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl shadow-lg p-8 text-white">
            <h2 class="text-2xl font-bold mb-4">What to Expect</h2>
            <ul class="space-y-3">
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 mt-0.5">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>Digital ticket with QR code sent via email</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 mt-0.5">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>Instant confirmation after payment</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 mt-0.5">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>Secure payment processing via Stripe</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 mt-0.5">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>Access to event updates and announcements</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Right Column - Ticket Booking -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200">
              <!-- Header -->
              <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6 text-white">
                <h2 class="text-2xl font-bold mb-2">Book Your Tickets</h2>
                <p class="text-indigo-100">Secure your spot now!</p>
              </div>

              <div class="p-6 space-y-6">
                <% if user_signed_in? %>
                  <% if @event.registered?(current_user) %>
                    <!-- Already Registered -->
                    <div class="space-y-4">
                      <div class="bg-emerald-50 border-2 border-emerald-200 rounded-xl p-6 text-center">
                        <div class="w-16 h-16 bg-emerald-100 rounded-full flex items-center justify-center mx-auto mb-4">
                          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-emerald-600">
                            <path d="M9 12l2 2 4-4"></path>
                            <circle cx="12" cy="12" r="10"></circle>
                          </svg>
                        </div>
                        <h3 class="text-lg font-bold text-emerald-900 mb-2">You're All Set!</h3>
                        <p class="text-emerald-700">You're registered for this event</p>
                      </div>

                      <%= link_to "#", class: "block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-4 px-6 rounded-xl transition-colors text-center shadow-lg" do %>
                        View My Tickets
                      <% end %>

                      <%= button_to "Cancel Registration", event_registration_path(@event, @event.registrations.find_by(user: current_user)), method: :delete, 
                          class: "w-full bg-white hover:bg-red-50 text-red-600 font-medium py-3 px-6 rounded-xl transition-colors border-2 border-red-200",
                          data: { confirm: "Are you sure you want to cancel your registration?" } %>
                    </div>
                  <% else %>
     
  <!-- Ticket Selection Form -->
  <%= form_with url: event_tickets_path(@event), method: :post, id: "ticket-form", class: "space-y-6" do |f| %>
    <!-- Quantity Selector -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-3">Number of Tickets</label>
      <div class="flex items-center gap-3">
        <button type="button" id="decrease-qty" class="w-12 h-12 rounded-xl bg-indigo-100 hover:bg-indigo-200 text-indigo-600 font-bold transition-colors flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
          </svg>
        </button>
        
        <%= f.number_field :quantity, 
            id: "ticket-quantity",
            min: 1, 
            max: 10, 
            value: 1, 
            class: "flex-1 text-center text-xl font-bold border-2 border-gray-200 rounded-xl py-3 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all" %>
        
        <button type="button" id="increase-qty" class="w-12 h-12 rounded-xl bg-indigo-100 hover:bg-indigo-200 text-indigo-600 font-bold transition-colors flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"></path>
            <path d="M12 5v14"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Price Breakdown -->
    <div class="bg-gray-50 rounded-xl p-4 space-y-3">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600">Price per ticket</span>
        <span class="font-semibold text-gray-900">$<%= @event.price %></span>
      </div>
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600">Quantity</span>
        <span class="font-semibold text-gray-900" id="display-quantity">1</span>
      </div>
      <div class="h-px bg-gray-200"></div>
      <div class="flex items-center justify-between">
        <span class="font-semibold text-gray-900">Total Amount</span>
        <span class="text-2xl font-bold text-indigo-600" id="total-amount">$<%= @event.price %></span>
      </div>
    </div>

    <!-- Submit Button -->
    <%= f.submit "Proceed to Payment", 
        class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-4 px-6 rounded-xl transition-all shadow-xl shadow-indigo-500/30 hover:shadow-2xl hover:shadow-indigo-500/40 transform hover:-translate-y-0.5",
        data: { disable_with: "Processing..." } %>
  <% end %>

  <!-- Trust Badges -->
  <div class="flex items-center justify-center gap-4 pt-4 border-t">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400">
      <rect width="20" height="16" x="2" y="4" rx="2"></rect>
      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
    </svg>
    <span class="text-xs text-gray-500">Secured by Stripe</span>
  </div>

  <script>
    document.getElementById('ticket-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = e.target;
      const formData = new FormData(form);
      const submitButton = form.querySelector('input[type="submit"]');
      
      submitButton.disabled = true;
      submitButton.value = 'Processing...';
      
      try {
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          }
        });
        
        const data = await response.json();
        
        if (data.url) {
          window.location.href = data.url;
        } else if (data.error) {
          alert('Error: ' + data.error);
          submitButton.disabled = false;
          submitButton.value = 'Proceed to Payment';
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
        submitButton.disabled = false;
        submitButton.value = 'Proceed to Payment';
      }
    });
  </script>
<% end %>
                <% else %>
                  <!-- Not Logged In -->
                  <div class="space-y-4">
                    <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 text-center">
                      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-600 mx-auto mb-2">
                        <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"></path>
                        <path d="M12 9v4"></path>
                        <path d="M12 17h.01"></path>
                      </svg>
                      <p class="text-sm text-amber-800 font-medium">Please log in to book tickets</p>
                    </div>

                    <%= link_to "Log In to Continue", new_user_session_path, 
                        class: "block w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-4 px-6 rounded-xl transition-all text-center shadow-lg" %>
                    
                    <p class="text-sm text-gray-500 text-center">
                      Don't have an account? 
                      <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Help Section -->
            <div class="mt-6 bg-white rounded-xl shadow-lg p-6 border border-gray-200">
              <h3 class="font-semibold text-gray-900 mb-3">Need Help?</h3>
              <p class="text-sm text-gray-600 mb-4">Have questions about this event? We're here to help!</p>
              <button class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                Contact Support
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  // Ticket quantity calculator
  document.addEventListener('DOMContentLoaded', function() {
    const quantityInput = document.getElementById('ticket-quantity');
    const decreaseBtn = document.getElementById('decrease-qty');
    const increaseBtn = document.getElementById('increase-qty');
    const displayQuantity = document.getElementById('display-quantity');
    const totalAmount = document.getElementById('total-amount');
    const pricePerTicket = <%= @event.price %>;

    function updateTotal() {
      const quantity = parseInt(quantityInput.value) || 1;
      displayQuantity.textContent = quantity;
      totalAmount.textContent = '$' + (pricePerTicket * quantity).toFixed(2);
    }

    if (decreaseBtn) {
      decreaseBtn.addEventListener('click', function() {
        const currentValue = parseInt(quantityInput.value) || 1;
        if (currentValue > 1) {
          quantityInput.value = currentValue - 1;
          updateTotal();
        }
      });
    }

    if (increaseBtn) {
      increaseBtn.addEventListener('click', function() {
        const currentValue = parseInt(quantityInput.value) || 1;
        if (currentValue < 10) {
          quantityInput.value = currentValue + 1;
          updateTotal();
        }
      });
    }

    if (quantityInput) {
      quantityInput.addEventListener('input', updateTotal);
    }
  });
</script>