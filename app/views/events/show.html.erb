<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="border-b sticky top-0 bg-indigo-500 text-white z-20 shadow-md">
    <div class="w-full px-8 sm:px-16 lg:px-24">
      <div class="flex items-center justify-between h-16">
        <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-90 transition-opacity" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8">
            <path d="M2 9a3 3 0 0 1 3-3h14a3 3 0 0 1 3 3"></path>
            <path d="M2 9h20"></path>
            <path d="M2 9v9a3 3 0 0 0 3 3h14a3 3 0 0 0 3-3V9"></path>
            <path d="M7 21v-4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v4"></path>
          </svg>
          <h1 class="text-2xl font-semibold text-white">EventHub</h1>
        <% end %>

        <nav class="hidden md:flex items-center gap-4">
          <%= link_to "Browse Events", "#", class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
          <%= link_to "My Tickets", "#", class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
          <%= link_to "About", "#", class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
        </nav>

        <div class="flex items-center gap-3">
          <%= link_to new_event_request_path, class: "hidden sm:inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium h-10 px-4 bg-white text-indigo-600 hover:bg-indigo-50 transition-colors shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5v14"></path>
            </svg>
            <span>Request Event</span>
          <% end %>

          <% if user_signed_in? %>
            <div class="flex items-center gap-1 ml-2 border-l border-indigo-400 pl-3">
              <%= link_to "Profile", edit_user_registration_path, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium text-sm" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium text-sm" %>
            </div>
          <% else %>
            <div class="flex items-center gap-2 ml-2">
              <%= link_to "Log In", new_user_session_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-700 transition-colors border border-indigo-400/30" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 bg-white/10 text-white hover:bg-white/20 transition-colors border border-white/20" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="py-8">
    <div class="w-full px-8 sm:px-16 lg:px-24">
      <!-- Back Button -->
      <div class="mb-6">
        <%= link_to root_path, class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          <span>Back to Events</span>
        <% end %>
      </div>

      <!-- Event Details -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <!-- Event Image -->
        <% if @event.image_url.present? %>
          <div class="h-80 overflow-hidden bg-gray-100">
            <%= image_tag @event.image_url, alt: @event.title, class: "w-full h-full object-cover" %>
          </div>
        <% end %>

        <div class="p-8">
          <!-- Event Header -->
          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-8">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-4">
                <span class="inline-flex items-center rounded-full bg-indigo-100 px-3 py-1 text-sm font-semibold text-indigo-600">
                  <%= @event.category %>
                </span>
                <div class="text-sm text-gray-500">
                  <strong><%= @event.registrations_count %></strong> attendees registered
                </div>
              </div>
              
              <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @event.title %></h1>
              <p class="text-xl text-gray-600 leading-relaxed"><%= @event.description %></p>
            </div>

            <!-- Price Card -->
            <div class="lg:w-80 bg-gray-50 rounded-xl p-6">
              <div class="text-center mb-6">
                <div class="text-sm text-gray-500 uppercase tracking-wider font-medium mb-2">Event Price</div>
                <div class="text-4xl font-bold text-gray-900">$<%= @event.price %></div>
                <div class="text-sm text-gray-500 mt-1">per person</div>
              </div>

              <!-- Registration Button -->
              <% if user_signed_in? %>
                <% if @event.registered?(current_user) %>
                  <div class="space-y-3">
                    <div class="bg-green-100 border border-green-200 rounded-lg p-4 text-center">
                      <div class="flex items-center justify-center gap-2 text-green-700 font-medium">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M9 12l2 2 4-4"></path>
                          <circle cx="12" cy="12" r="10"></circle>
                        </svg>
                        <span>You're registered!</span>
                      </div>
                    </div>
                    <%= button_to "Cancel Registration", event_registration_path(@event, @event.registrations.find_by(user: current_user)), method: :delete, 
                        class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors",
                        data: { confirm: "Are you sure you want to cancel your registration?" } %>
                  </div>
                <% else %>
                  <%= form_with url: event_registrations_path(@event), method: :post, local: true, class: "space-y-4" do |f| %>
                    <%= f.submit "Register for Event", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors shadow-md" %>
                  <% end %>
                <% end %>
              <% else %>
                <div class="space-y-3">
                  <%= link_to "Log In to Register", new_user_session_path, class: "block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors text-center" %>
                  <p class="text-sm text-gray-500 text-center">
                    Don't have an account? 
                    <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Event Details Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <!-- Date & Time -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-600">
                  <path d="M8 2v4"></path>
                  <path d="M16 2v4"></path>
                  <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                  <path d="M3 10h18"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Date & Time</h3>
                <% if @event.date.present? %>
                  <p class="text-gray-600"><%= @event.date.strftime("%A, %B %d, %Y") %></p>
                  <p class="text-gray-600"><%= @event.date.strftime("%I:%M %p") %></p>
                <% else %>
                  <p class="text-gray-500">Date not set</p>
                <% end %>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-600">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Location</h3>
                <p class="text-gray-600"><%= @event.location %></p>
              </div>
            </div>
          </div>

          <!-- Flash Messages -->
          <% if flash[:notice] %>
            <div class="bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
