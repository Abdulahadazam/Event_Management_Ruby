<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="border-b sticky top-0 bg-white/95 backdrop-blur-sm z-50 shadow-sm">
    <div class="w-full px-6 sm:px-8 lg:px-16">
      <div class="flex items-center justify-between h-16">
        <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-80 transition-opacity" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-xl flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M8 2v4"></path>
              <path d="M16 2v4"></path>
              <rect width="18" height="18" x="3" y="4" rx="2"></rect>
              <path d="M3 10h18"></path>
            </svg>
          </div>
          <h1 class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">EventHub</h1>
        <% end %>

        <nav class="hidden md:flex items-center gap-1">
          <%= link_to "Browse Events", root_path, class: "px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium" %>
          <%= link_to "My Tickets", my_tickets_path, class: "px-4 py-2 rounded-lg bg-indigo-50 text-indigo-600 font-medium" %>
        </nav>

        <div class="flex items-center gap-3">
          <% if user_signed_in? %>
            <div class="flex items-center gap-2">
              <%= link_to "Profile", edit_user_registration_path, class: "hidden sm:inline-flex px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors font-medium text-sm" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-4 py-2 rounded-lg bg-gray-900 text-white hover:bg-gray-800 transition-colors font-medium text-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="py-8">
    <div class="w-full px-6 sm:px-8 lg:px-16 max-w-7xl mx-auto">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">My Tickets</h1>
        <p class="text-gray-600">View and manage your event tickets</p>
      </div>

      <% if @tickets.any? %>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <% @tickets.each do |ticket| %>
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow">
              <!-- Ticket Header -->
              <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6 text-white">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-2"><%= ticket.event.title %></h3>
                    <div class="flex items-center gap-2 text-indigo-100">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M8 2v4"></path>
                        <path d="M16 2v4"></path>
                        <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                        <path d="M3 10h18"></path>
                      </svg>
                      <span class="text-sm"><%= ticket.event.date.strftime("%b %d, %Y") if ticket.event.date %></span>
                    </div>
                  </div>
                  <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
                    <%= ticket.status.titleize %>
                  </span>
                </div>
              </div>

              <!-- Ticket Details -->
              <div class="p-6">
                <div class="space-y-4">
                  <!-- Quantity -->
                  <div class="flex items-center justify-between py-3 border-b border-gray-100">
                    <span class="text-gray-600 font-medium">Tickets</span>
                    <span class="text-gray-900 font-bold"><%= ticket.quantity %> ticket(s)</span>
                  </div>

                  <!-- Total Amount -->
                  <div class="flex items-center justify-between py-3 border-b border-gray-100">
                    <span class="text-gray-600 font-medium">Total Paid</span>
                    <span class="text-gray-900 font-bold">$<%= sprintf('%.2f', ticket.total_amount) %></span>
                  </div>

                  <!-- Location -->
                  <div class="flex items-start gap-3 py-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-indigo-600 flex-shrink-0 mt-0.5">
                      <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                      <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-600">Location</p>
                      <p class="text-gray-900 font-medium"><%= ticket.event.location %></p>
                    </div>
                  </div>

                  <!-- Booking ID -->
                  <div class="bg-gray-50 rounded-lg p-3">
                    <p class="text-xs text-gray-500 mb-1">Booking ID</p>
                    <p class="text-sm font-mono font-semibold text-gray-900">#<%= ticket.id %></p>
                  </div>
                </div>

                <!-- Actions -->
                <div class="mt-6 flex gap-3">
                  <%= link_to event_path(ticket.event), class: "flex-1 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold py-3 px-4 rounded-lg transition-all text-center" do %>
                    View Event
                  <% end %>
                  
                  <button class="px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                      <polyline points="7 10 12 15 17 10"></polyline>
                      <line x1="12" x2="12" y1="15" y2="3"></line>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400">
              <path d="M2 9a3 3 0 0 1 3-3h14a3 3 0 0 1 3 3"></path>
              <path d="M2 9h20"></path>
              <path d="M2 9v9a3 3 0 0 0 3 3h14a3 3 0 0 0 3-3V9"></path>
              <path d="M7 21v-4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v4"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 mb-2">No Tickets Yet</h2>
          <p class="text-gray-600 mb-8">Start exploring events and book your tickets</p>
          <%= link_to "Browse Events", root_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-xl transition-all shadow-lg" %>
        </div>
      <% end %>
    </div>
  </main>
</div>