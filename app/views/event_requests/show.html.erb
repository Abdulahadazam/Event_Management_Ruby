<!-- app/views/event_requests/show.html.erb -->
<div class="max-w-3xl mx-auto py-12">
  <h1 class="text-2xl font-semibold mb-4"><%= @event_request.event_title %></h1>
  <p class="text-sm text-gray-600 mb-4">Requested by <strong><%= @event_request.name %></strong> — <%= @event_request.email %></p>

  <div class="bg-white p-6 rounded-md shadow-sm">
    <p class="mb-4"><%= simple_format(@event_request.event_description) %></p>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Type</dt>
        <dd class="mt-1"><%= @event_request.location_type %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Preferred Date</dt>
        <dd class="mt-1"><%= @event_request.preferred_date %> <%= @event_request.preferred_time %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Category</dt>
        <dd class="mt-1"><%= @event_request.category&.name || "—" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1"><%= @event_request.status %></dd>
      </div>
    </dl>

    <% if @event_request.banner.attached? %>
      <div class="mt-4">
        <%= image_tag url_for(@event_request.banner.variant(resize_to_limit: [1200, 400])) %>
      </div>
    <% end %>
  </div>
</div>
