<div class="min-h-screen bg-gray-50 flex flex-col">
  
  <!-- NAVBAR -->
  <header class="border-b sticky top-0 bg-indigo-500 text-white z-20 shadow-md">
    <div class="w-full px-8 sm:px-16 lg:px-24">
      <div class="flex items-center justify-between h-16">
        
        <%= link_to root_path, class: "flex items-center gap-2 hover:opacity-90 transition-opacity" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8">
            <path d="M2 9a3 3 0 0 1 3-3h14a3 3 0 0 1 3 3"></path>
            <path d="M2 9h20"></path>
            <path d="M2 9v9a3 3 0 0 0 3 3h14a3 3 0 0 0 3-3V9"></path>
            <path d="M7 21v-4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v4"></path>
          </svg>
          <h1 class="text-2xl font-semibold text-white">EventHub</h1>
        <% end %>

        <nav class="hidden md:flex items-center gap-4">
          <%= link_to "Browse Events", root_path, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
          <%= link_to "My Tickets", "#", class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
          <%= link_to "About", about_path, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium" %>
        </nav>

        <div class="flex items-center gap-3">
          <%= link_to new_event_request_path, class: "hidden sm:inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium h-10 px-4 bg-white text-indigo-600 hover:bg-indigo-50 transition-colors shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5v14"></path>
            </svg>
            <span>Request Event</span>
          <% end %>

          <% if user_signed_in? %>
            <div class="flex items-center gap-1 ml-2 border-l border-indigo-400 pl-3">
              <%= link_to "Profile", edit_user_registration_path, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium text-sm" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-3 py-2 rounded-md text-white hover:bg-white/10 transition-colors font-medium text-sm" %>
            </div>
          <% else %>
            <div class="flex items-center gap-2 ml-2">
              <%= link_to "Log In", new_user_session_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-700 transition-colors border border-indigo-400/30" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 bg-white/10 text-white hover:bg-white/20 transition-colors border border-white/20" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- MAIN CONTENT -->
  <main class="flex-grow bg-gradient-to-br from-indigo-50 via-white to-purple-50">
    <div class="w-full px-8 sm:px-16 lg:px-24 py-16">
      
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-4 tracking-tight">
          Want to Make an Event?
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Transform your vision into reality. Share your event details with us and we'll help bring your ideas to life.
        </p>
      </div>

      <!-- Form Section -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl border border-gray-100 overflow-hidden">
          
          <!-- Form Header -->
          <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 md:px-12 py-8">
            <h2 class="text-3xl font-bold text-white flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              Fill in This Form
            </h2>
            <p class="text-indigo-100 mt-2 text-lg">Please provide all the necessary details about your event</p>
          </div>

          <!-- Form Body -->
          <div class="px-8 md:px-12 py-10">
            <%= form_with model: @event_request, local: true, html: { multipart: true, data: { controller: "event-request" }, class: "space-y-10" } do |f| %>
              
              <!-- Personal Information Section -->
              <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Personal Information
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <div>
                    <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :name, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "Your full name", required: true %>
                  </div>
                  
                  <div>
                    <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.email_field :email, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "your@email.com", required: true %>
                  </div>
                  
                  <div>
                    <%= f.label :phone, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.telephone_field :phone, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "+1 (555) 123-4567", required: true %>
                  </div>
                </div>
              </div>

              <!-- Event Details Section -->
              <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Event Details
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <%= f.label :event_title, "Event Title", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :event_title, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "Give your event a catchy title", required: true %>
                  </div>
                  
                  <div>
                    <%= f.label :event_category_id, "Category", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.collection_select :event_category_id, Category.all, :id, :name, { prompt: "Select category" }, { class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all cursor-pointer text-base appearance-none bg-white", required: true } %>
                  </div>
                  
                  <div>
                    <%= f.label :event_type, "Event Type", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.select :event_type, ["Concert", "Conference", "Party", "Meetup", "Workshop"], { prompt: "Select event type" }, { class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all cursor-pointer text-base appearance-none bg-white", required: true } %>
                  </div>
                  
                  <div>
                    <%= f.label :expected_guests, "Expected Guests", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.number_field :expected_guests, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "e.g. 50", required: true %>
                  </div>
                  
                  <div class="md:col-span-2">
                    <%= f.label :budget, "Budget (USD)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.number_field :budget, step: 0.01, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "e.g. 1000.00" %>
                  </div>
                </div>

                <div>
                  <%= f.label :event_description, "Event Description", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.text_area :event_description, rows: 5, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none text-base", placeholder: "Describe your event in detail...", required: true %>
                </div>
              </div>

              <!-- Schedule Section -->
              <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Schedule & Mode
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <div>
                    <%= f.label :preferred_date, "Preferred Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.date_field :preferred_date, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", required: true %>
                  </div>
                  
                  <div>
                    <%= f.label :preferred_time, "Preferred Time", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.time_field :preferred_time, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", required: true %>
                  </div>
                  
                  <div>
                    <%= f.label :is_remote, "Event Mode", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <div class="flex items-center gap-6 mt-3 h-12">
                      <label class="inline-flex items-center cursor-pointer">
                        <%= f.radio_button :is_remote, false, checked: true, data: { action: "change->event-request#toggle" }, class: "w-5 h-5 text-indigo-600 focus:ring-indigo-500" %>
                        <span class="ml-2 text-gray-700 font-medium">Physical</span>
                      </label>
                      <label class="inline-flex items-center cursor-pointer">
                        <%= f.radio_button :is_remote, true, data: { action: "change->event-request#toggle" }, class: "w-5 h-5 text-indigo-600 focus:ring-indigo-500" %>
                        <span class="ml-2 text-gray-700 font-medium">Remote</span>
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Location Section (Physical) -->
              <div id="physical_fields" data-event-request-target="physical" class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Venue Details
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="md:col-span-2">
                    <%= f.label :venue_address, "Venue Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :venue_address, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "Enter complete venue address" %>
                  </div>
                  
                  <div>
                    <%= f.label :city, "City", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :city, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "Enter city" %>
                  </div>
                  
                  <div>
                    <%= f.label :country, "Country", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :country, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "Enter country" %>
                  </div>
                </div>
              </div>

              <!-- Remote Section -->
              <div id="remote_fields" data-event-request-target="remote" class="space-y-6 hidden">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Online Meeting Details
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <%= f.label :platform, "Platform", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :platform, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "e.g. Zoom, Google Meet" %>
                  </div>
                  
                  <div>
                    <%= f.label :time_zone, "Time Zone", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.text_field :time_zone, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "e.g. Asia/Karachi" %>
                  </div>
                  
                  <div class="md:col-span-2">
                    <%= f.label :meeting_link, "Meeting Link (optional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                    <%= f.url_field :meeting_link, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-base", placeholder: "https://zoom.us/j/..." %>
                  </div>
                </div>
              </div>

              <!-- Additional Details -->
              <div class="space-y-6">
                <h3 class="text-2xl font-bold text-gray-900 border-b-2 border-indigo-500 pb-2 inline-block">
                  Additional Information
                </h3>
                
                <div>
                  <%= f.label :banner, "Event Banner (optional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <div class="relative">
                    <%= f.file_field :banner, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all file:mr-4 file:py-2 file:px-6 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 cursor-pointer text-base" %>
                  </div>
                  <p class="text-sm text-gray-500 mt-2">Upload an image that represents your event (JPG, PNG, max 5MB)</p>
                </div>

                <div>
                  <%= f.label :notes, "Additional Notes", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                  <%= f.text_area :notes, rows: 4, class: "w-full px-4 py-3.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none text-base", placeholder: "Any special requirements, dietary restrictions, accessibility needs, or other details we should know..." %>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="pt-8 mt-8 border-t-2 border-gray-200">
                <%= f.submit "Submit Event Request", class: "w-full py-5 px-8 bg-indigo-500 text-white text-xl font-bold rounded-xl hover:bg-indigo-600 transition-all transform hover:scale-[1.01] active:scale-[0.99] shadow-lg hover:shadow-xl cursor-pointer" %>
                <p class="text-center text-sm text-gray-500 mt-6">
                  We'll review your request and get back to you within 24-48 hours
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>

