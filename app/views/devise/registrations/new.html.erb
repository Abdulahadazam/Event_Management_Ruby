<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg p-8 max-w-md w-full">

    <h2 class="text-3xl font-bold text-center mb-6">Create an Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <% if resource.errors.any? %>
        <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition" %>

    <% end %>

    <div class="mt-6 text-center">
      <p class="text-gray-600">OR</p>

      <!-- Google Login Button UI -->
      <button class="mt-3 w-full flex items-center justify-center gap-2 border py-2 rounded-lg hover:bg-gray-100 transition">
        <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5" />
        Sign up with Google
      </button>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>

  </div>
</div>
