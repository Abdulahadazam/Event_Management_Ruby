<div class="flex min-h-screen items-center justify-center bg-gray-100 py-12 px-4">
  <div class="w-full max-w-md space-y-8">

    <!-- Header -->
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Or
        <%= link_to "create a free account", new_user_registration_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>

    <!-- Actual Login Form -->
    <div class="bg-white rounded-lg shadow p-8 space-y-6">

      <%# THE CORRECT DEVISE FORM %>
      <%= form_for(resource,
                   as: resource_name,
                   url: session_path(resource_name),
                   html: { class: "space-y-6", data: { turbo: false } }) do |f| %>

        <!-- Email Field -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Email address</label>
          <%= f.email_field :email, autofocus: true, required: true,
                class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2
                       focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Password Field -->
        <div>
          <label class="block text-sm font-medium text-gray-700">Password</label>
          <%= f.password_field :password, autocomplete: "current-password", required: true,
                class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2
                       focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
          <label class="ml-2 block text-sm text-gray-900">
            Remember me
          </label>
        </div>

        <!-- Login Button -->
        <div>
          <%= f.submit "Sign In",
                class: "w-full flex justify-center rounded-md bg-indigo-600 py-2 px-4
                        text-sm font-semibold text-white hover:bg-indigo-700
                        focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>


     

      <% end %>
<div class="mt-4">
  <form action="<%= user_google_oauth2_omniauth_authorize_path %>" method="post" data-turbo="false" class="w-full">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="w-full flex justify-center rounded-md bg-red-600 py-2 px-4
           text-sm font-semibold text-white hover:bg-red-700">
      Sign in with Google
    </button>
  </form>
</div>
 
      <!-- Forgot Password -->
      <div class="text-center">
        <%= link_to "Forgot your password?",
            new_user_password_path,
            class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>

    </div>
  </div>
</div>
